<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accountlogin">


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="383dp"
        android:layout_height="144dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_fragment_avatar_signup" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_list"
        android:layout_below="@+id/avatar"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <EditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fragment_border"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:minHeight="70dp"
            android:text="tester@gmail.com"
            android:textColor="@color/quantum_grey"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_login"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:minHeight="70dp"
            android:text="test123"
            android:background="@drawable/fragment_border"
            android:textSize="20sp"
            android:textColor="@color/quantum_grey"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_list"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="5dp"
        android:text="@string/confirm" />


</RelativeLayout>