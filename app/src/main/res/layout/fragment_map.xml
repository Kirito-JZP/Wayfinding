<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.map.MapFragment" />

    <!--your location & search field-->
    <RelativeLayout
        android:id="@+id/Layout_start_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="30dp"
        android:elevation="10dp"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/start_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/location"
            android:layout_marginRight="15dp"
            />

        <EditText
            android:id="@+id/input_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/start_img"
            android:background="@null"
            android:hint="Your location"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15dp" />
        <ImageView
            android:id="@+id/clear_departure"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="280dp"
            android:src="@drawable/ic_clear"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Layout_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Layout_start_location"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/border"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/input_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/search_img"
            android:background="@null"
            android:ems="10"
            android:hint="Search here"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:singleLine="true"
            android:textSize="15dp" />
        <ImageView
            android:id="@+id/clear_destination"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="280dp"
            android:src="@drawable/ic_clear"
            />
    </RelativeLayout>

    <!--add to preference & exchange button-->

    <ScrollView
        android:id="@+id/autocomplete_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Layout_search"
        android:layout_alignStart="@id/Layout_search"
        android:layout_alignEnd="@id/Layout_search"
        android:layout_marginEnd="3dp"
        android:elevation="1dp"
        android:visibility="invisible"
        android:background="@drawable/border">
        <ListView
            android:id="@+id/places_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/Layout_start_location"
        android:layout_alignBottom="@+id/Layout_search"
        android:layout_marginStart="350dp"
        android:layout_marginLeft="350dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/exchange"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_exchange" />
    </LinearLayout>

    <!--  navigate & user position button  -->
    <ImageView
        android:id="@+id/navigate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="168dp"
        android:scaleType="centerCrop"
        android:src="@drawable/navigate" />
    <ImageView
        android:id="@+id/position"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="101dp"
        android:scaleType="centerCrop"
        android:src="@drawable/position" />
    <!--transportation-->
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/public_img"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/publictransport" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/public_img"
                android:gravity="center_vertical"
                android:text="Public"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/walk_img"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/walking" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/walk_img"
                android:gravity="center_vertical"
                android:text="Walk"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/cycling_img"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cycling" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/cycling_img"
                android:gravity="center_vertical"
                android:text="Cycling"
                android:textSize="15dp" />
        </RelativeLayout>
    </RelativeLayout>
    <!-- bottom sheet -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        tools:openDrawer="start">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/bottomsheet"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@drawable/bottomsheetrounded"
                map:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_remove"></ImageView>

                <!--自己定义的布局-->

            </FrameLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>

</RelativeLayout>