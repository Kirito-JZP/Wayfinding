    <com.main.wayfinding.fragment.account.RoundImageView
        android:id="@+id/avatar"
        android:layout_width="189dp"
        android:layout_height="189dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_fragment_person" />

    <ScrollView
        android:id="@+id/user_details"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_below="@+id/avatar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fragment_border"
                android:drawableLeft="@drawable/ic_fragement_email"
                android:elevation="10dp"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:text="@string/email"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="219dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/fragment_border"
                    android:drawableLeft="@drawable/ic_fragment_person"
                    android:enabled="false"
                    android:gravity="center_horizontal"
                    android:text="@string/first_name"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/surname"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/fragment_border"
                    android:elevation="10dp"
                    android:enabled="false"
                    android:gravity="center_horizontal"
                    android:text="@string/surname"
                    android:textSize="20sp" />

            </LinearLayout>




            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fragment_border"
                android:drawableLeft="@drawable/ic_fragment_country"
                android:elevation="10dp"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:text="@string/country"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fragment_border"
                android:drawableLeft="@drawable/ic_fragment_phone"
                android:elevation="10dp"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:text="@string/phone_number"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/none"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:elevation="10dp"
                android:gravity="center_horizontal"
                android:text="@string/phone_number"
                android:textSize="20sp"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/button_list_signout_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_details"
        android:layout_marginTop="0dp"
        android:gravity="center">

        <Button
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"

            android:text="@string/sign_out" />

        <Button
            android:id="@+id/confirm_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="@string/confirm"
            android:visibility="gone" />

        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/edit" />

        <Button
            android:id="@+id/edit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:visibility="gone" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/button_list_login_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_list_signout_edit"
        android:layout_marginTop="0dp"
        android:gravity="center">

        <Button
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_toRightOf="@+id/login"
            android:text="@string/sign_up" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login" />
