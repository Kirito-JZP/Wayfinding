    <ImageView
        android:id="@+id/avatar_background"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:src="@drawable/fragment_avatar_bg" />

    <com.main.wayfinding.fragment.account.RoundImageView
        android:id="@+id/avatar"
        android:layout_width="147dp"
        android:layout_height="154dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_fragment_avatar_default" />


    <ScrollView
        android:id="@+id/user_details"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="50dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/fragment_border"
                android:drawableStart="@drawable/ic_email"
                android:enabled="false"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="45dp"
                android:text="@string/email"
                android:textColor="#a9a9a9"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="219dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/fragment_border"
                    android:drawableStart="@drawable/ic_avatar"
                    android:enabled="false"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="10dp"
                    android:text="@string/first_name"
                    android:textColor="#a9a9a9"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/surname"
                    android:layout_width="192dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/fragment_border"
                    android:enabled="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="45dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/surname"
                    android:textColor="#a9a9a9"
                    android:textSize="20sp" />

            </LinearLayout>


            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/fragment_border"
                android:drawableStart="@drawable/ic_country"
                android:enabled="false"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="45dp"
                android:text="@string/country"
                android:textColor="#a9a9a9"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/fragment_border"
                android:drawableStart="@drawable/ic_phone"
                android:enabled="false"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="45dp"
                android:text="@string/phone_number"
                android:textColor="#a9a9a9"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/button_list_signout_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_details"
        android:layout_marginTop="45dp"
        android:gravity="center">

        <Button
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="@string/sign_out" />

        <Button
            android:id="@+id/edit_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="@string/confirm"
            android:visibility="gone" />

        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="@string/edit" />

        <Button
            android:id="@+id/edit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="@string/back"
            android:visibility="gone" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/button_list_login_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_list_signout_edit"

        android:gravity="center">

        <Button
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_toEndOf="@+id/login"
            android:layout_toRightOf="@+id/login"
            android:text="@string/sign_up" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login" />
